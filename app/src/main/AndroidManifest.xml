<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.kpfu.mobilereportapp" >

    <uses-sdk
        android:maxSdkVersion="22"
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LogInActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_log_in" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddComplaintActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/title_activity_add_complasint" >
        </activity>
        <activity
            android:name=".ComplaintActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".DetailComplaintActivity"
            android:label="@string/title_activity_detail_complaint" >
        </activity>
        <activity
            android:name=".UserComplaintActivity"
            android:label="@string/title_activity_user_complaint" >
        </activity>
    </application>

</manifest>
